<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="30dp"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            android:theme="@style/homeToolbar"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"

            >
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_keyboard_backspace_24"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:text="Settings"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                />

        </androidx.appcompat.widget.Toolbar>
    </RelativeLayout>


    <EditText
        android:id="@+id/search"
        android:layout_below="@id/tool"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Search "
        android:layout_marginBottom="3dp"
        android:textSize="14sp"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:pointerIcon="alias"
        android:drawablePadding="15dp"
        android:textColorHint="#827A7A"
        android:fontFamily="sans-serif-medium"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/search_background"
        />

    <RelativeLayout
        android:layout_below="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        >
        <LinearLayout
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            >
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="14dp"
                android:background="@android:color/transparent"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Follow and invite friends"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="normal"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/two"
            android:layout_below="@id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            >
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="14dp"
                android:background="@android:color/transparent"
                android:src="@drawable/notification_icon"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="16sp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/three"
            android:layout_below="@id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            >
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="14dp"
                android:background="@android:color/transparent"
                android:src="@drawable/privacy_icon"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="16sp"

                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/four"
            android:layout_below="@id/three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:layout_marginBottom="10dp"
            >
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="14dp"
                android:background="@android:color/transparent"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Supervision"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="16sp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/five"
            android:layout_below="@id/four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            >
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="14dp"
                android:background="@android:color/transparent"
                android:src="@drawable/security_icon"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Security"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="16sp"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/six"
        android:layout_below="@id/five"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        >
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="14dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ads_icon"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ads"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="16sp"
            />

    </LinearLayout>
        <LinearLayout
            android:id="@+id/seven"
        android:layout_below="@id/six"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
            android:visibility="gone"
        android:layout_marginBottom="10dp"
        >
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="14dp"
            android:background="@android:color/transparent"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="16sp"
            />

    </LinearLayout>
        <LinearLayout
            android:id="@+id/eight"
        android:layout_below="@id/seven"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        >
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="14dp"
            android:background="@android:color/transparent"
            android:src="@drawable/help_icon"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="help"
            android:textColor="@color/black"
            android:textStyle="normal"
            android:textSize="16sp"
            />

    </LinearLayout>
        <LinearLayout
            android:id="@+id/nine"
            android:layout_below="@id/eight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            >
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="14dp"
                android:background="@android:color/transparent"
                android:src="@drawable/theme_icon"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Theme"
                android:textColor="@color/black"
                android:textStyle="normal"
                android:textSize="16sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/nine"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nine"
                android:text="Account center"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Control settings for connected expperiences across instragram,the Facebook app and messenger ,including storu and post sharing and logging in "
                android:lineSpacingExtra="2dp"
                android:textSize="14sp"
                android:textColor="#D3000000"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-light"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nine"
                android:text="Add Account"
                android:textSize="15sp"
                android:textColor="#2196F3"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nine"
                android:text="Log out"
                android:textSize="15sp"
                android:textColor="#2196F3"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                />
        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>






